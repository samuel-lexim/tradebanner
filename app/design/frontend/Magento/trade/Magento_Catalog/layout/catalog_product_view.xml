<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main" htmlTag="div" htmlClass="product-info-main contentDP" />
        <referenceContainer name="product.info.media" htmlTag="div" htmlClass="product media mediaDP" />

        <block class="Magento\Framework\View\Element\Template" name="category.menu" template="Magento_Theme::html/product-menu.phtml"/>
        <move element="category.menu" destination="columns" before="-" />

        <move element="page.main.title" destination="product.info.main" before="-"/>
        <move element="product.info.media" destination="content" before="-" />

        <referenceBlock name="product.info.mailto" remove="true" />
        <referenceBlock name="product.info.addto" remove="true" />

    </body>
</page>
